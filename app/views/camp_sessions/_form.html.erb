<%= form_for(camp_session) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, size: 20, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :minimum_age %>
      <%= f.number_field :minimum_age, min: 1, max: 100, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :maximum_age %>
      <%= f.number_field :maximum_age, min: 1, max: 100, class: 'form-control' %>
    </div>

    <%= f.label :gender %>
    <div class="form-group">
      <label class="radio-inline">
        <%= f.radio_button :gender, :Male %> Boy
      </label>
      <label class="radio-inline">
        <%= f.radio_button :gender, :Female %> Girl
      </label>
      <label class="radio-inline">
        <%= f.radio_button :gender, :Both %> Both
      </label>
    </div>

    <div class="form-group">
      <%= f.label :start_date %>
      <%= date_field(:camp_session, :start_date, class:'datepicker_session form-control') %>
    </div>

    <div class="form-group">
      <%= f.label :end_date %>
      <%= date_field(:camp_session, :end_date, class:'datepicker_session form-control') %>
    </div>

    <div class="form-group">
      <%= f.label :year %>
      <%= f.number_field :year, min: 2017, max: 2999, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :remaining %>
      <%= f.number_field :remaining, min: 0, max: 200, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :capacity %>
      <%= f.number_field :capacity, min: 1, max: 200, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :fee %>
      <%= f.number_field :fee, min: 1, max: 1000, class: 'form-control' %>
      <div class="checkbox">
        <%= f.label :enabled do %>
            <%= f.check_box :enabled %> Enabled
        <% end %>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-6 col-sm-6">
        <%= link_to 'Back', camp_sessions_path, class: 'btn btn-danger' %>
      </div>
      <div class="col-md-6 col-sm-6">
        <div class="actions pull-right">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
<% end %>