<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1">
    <div class="panel panel-primary main-content">
      <div class="panel-heading center">
        <h1>Log in</h1>
      </div>

      <div class="panel-body">
        <%= form_for(:session, url: login_path) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email, size: 40, class: 'form-control' %>

            <%= f.label :password %>
            <%= link_to '(forgot password)', new_password_reset_path %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :remember_me, class: 'checkbox inline cb-pull' do %>
                <%= f.check_box :remember_me %>
                <span>Remember me on this computer</span>
            <% end %>

            <%= f.submit 'Log in', class: 'btn btn-primary' %>
        <% end %>

        <p>New user?  &nbsp;<%= link_to 'Sign up now!', new_user_path %></p>

        <hr>
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <a class="btn btn-block btn-social btn-sm btn-google" href="/auth/google_oauth2">
              <span class="fa fa-google"></span> Sign in with Google
            </a>
          </div>
          <div class="col-md-6 col-sm-6">
            <a class="btn btn-block btn-social btn-sm btn-facebook" href="/auth/facebook">
              <span class="fa fa-facebook"></span> Sign in with Facebook
            </a>
          </div>
        </div><!-- row -->
      </div><!-- panel-body -->
    </div><!-- panel-primary -->
  </div><!-- col-md-4 -->
</div><!-- row -->

