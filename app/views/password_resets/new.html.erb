<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1">
    <div class="panel panel-primary main-content">
      <div class="panel-body">
        <h3 class="section">Get back into your account</h3>

        <%= form_for :password_reset, url: password_resets_path, :html => {class: 'form-horizontal', role: 'form' } do |f| %>
            <div class="form-group">
              <%= f.label :email, class:'col-sm-4 control-label' %>
              <div class="col-sm-8">
                <%= f.text_field :email, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-4 col-sm-8">
                <%= f.submit 'Submit', class: 'btn btn-primary' %>
              </div>
            </div>
        <% end %>
      </div><!-- panel-body -->
    </div><!-- panel-primary -->
  </div><!-- col-md-4 -->
</div><!-- row -->

