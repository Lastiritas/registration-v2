<%= form_for(parent) do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, size: 20, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, size: 20, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_area :address, rows: 3, cols: 40, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, size: 40, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :home_phone_number %>
    <%= f.text_field :home_phone_number, size: 40, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :cell_phone_number %>
    <%= f.text_field :cell_phone_number, size: 40, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :work_phone_number %>
    <%= f.text_field :work_phone_number, size: 40, class: 'form-control' %>
  </div>
  <br>

  <div class="row">
    <div class="col-md-6 col-sm-6">
      <%= link_to 'Back', back_link, class: 'btn btn-danger' %>
    </div>
    <div class="col-md-6 col-sm-6">
      <div class="actions pull-right">
        <%= f.submit btn_text, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
