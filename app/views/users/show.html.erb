<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1">
    <div class="panel panel-primary main-content">
      <div class="panel-body">
        <h3 class="section">User Details</h3>

        <form class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-4 control-label">Name</label>
            <div class="col-sm-8">
              <p class="form-control-static"><%= @user.name %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">E-mail</label>
            <div class="col-sm-8">
              <p class="form-control-static"><%= @user.email %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Activated</label>
            <div class="col-sm-8">
              <p class="form-control-static"><%= @user.activated ? 'True' : 'False' %></p>
            </div>
          </div>
        </form>
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <%= link_to 'Back', users_path, class:'btn btn-danger' %>
          </div><!-- col-md-6 -->
        </div><!-- row -->

      </div><!-- panel-body -->
    </div><!-- panel-primary -->
  </div><!-- col-md-4 -->
</div><!-- row -->

