<header class="navbar navbar-fixed-top navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar-main" aria-expanded="false">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Camp Wannakumbac', 'http://wannakumbac.com', id: 'logo', class: 'navbar-brand' %>
    </div>
    <div class="navbar-collapse collapse" id="navbar-main" aria-expanded="false">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'My Applications', parents_path %></li>
        <li><%= link_to 'Help', '#' %></li>
        <% if logged_in? %>
            <% if current_user.admin? %>
                <li><%= link_to 'Admin', admin_index_path %></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Account <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Change Password', new_password_reset_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'Log out', logout_path, method: 'delete' %></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to 'Log in', login_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>