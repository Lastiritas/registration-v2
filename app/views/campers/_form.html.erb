<%= form_for(camper) do |f| %>
    <%= f.hidden_field(:registration_cart_id) %>

    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, size: 20 %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, size: 20 %>
    </div>

    <div class="field">
      <%= f.label :gender %>
      <%= f.radio_button :gender, :male %> Boy
      <%= f.radio_button :gender, :female %> Girl
    </div>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_area :address, rows: 3, cols: 40 %>
    </div>

    <div class="field">
      <%= f.label :birth_date %>
      <%= date_field(:camper, :birth_date, class:'datepicker') %>
    </div>

    <div class="camp-session-selection">
      <table>
        <thead>
        <tr>
          <th></th>
          <th>Week</th>
          <th>Ages</th>
          <th>Dates</th>
          <th>Price</th>
        </tr>
        </thead>
        <tbody>
        <% camp_sessions.each do |session| %>
            <tr>
              <td class="field session-<% session.id %>">
                <%= f.radio_button(:camp_session_id, session.id, disabled:false) %>
              </td>
              <td><%= session.name %></td>
              <td><%= "#{session.minimum_age}-#{session.maximum_age}" %></td>
              <td><%= getMonthDate(session.start_date, session.end_date) %></td>
              <td><%= number_to_currency(session.fee) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
